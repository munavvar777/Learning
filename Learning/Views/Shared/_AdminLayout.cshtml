@using Microsoft.AspNetCore.Identity
@using Learning.Data 
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-sidebar">
        <a href="/" class="sidebar-brand">
            <i class="fas fa-graduation-cap me-2"></i>
            Learning ERP
        </a>

        <nav class="sidebar-nav mt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Dashboard">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Students">
                        <i class="fas fa-user-graduate me-2"></i>
                        Students
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Teachers">
                        <i class="fas fa-chalkboard-teacher me-2"></i>
                        Teachers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Courses">
                        <i class="fas fa-book me-2"></i>
                        Courses
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Departments">
                        <i class="fas fa-building me-2"></i>
                        Departments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Enrollments">
                        <i class="fas fa-clipboard-list me-2"></i>
                        Enrollments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Exams">
                        <i class="fas fa-file-alt me-2"></i>
                        Exams
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Results">
                        <i class="fas fa-chart-line me-2"></i>
                        Results
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Reports">
                        <i class="fas fa-chart-bar me-2"></i>
                        Reports
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Settings">
                        <i class="fas fa-cog me-2"></i>
                        Settings
                    </a>
                </li>
            </ul>
        </nav>

        <div class="user-info">
            <div class="d-flex align-items-center">
                <i class="fas fa-user-shield me-2"></i>
                <div>
                    <div class="fw-bold">@UserManager.GetUserName(User)</div>
                    <small>Administrator</small>
                </div>
            </div>
            <form asp-controller="Account" asp-action="Logout" method="post" class="mt-2">
                <button type="submit" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-sign-out-alt me-1"></i>
                    Logout
                </button>
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <div class="admin-content">
        <div class="admin-header">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@ViewData["Title"]</h4>
                <div class="d-flex align-items-center">
                    <span class="text-muted me-3">Welcome, @UserManager.GetUserName(User)</span>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Admin/Profile"><i class="fas fa-user-edit me-2"></i>Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>